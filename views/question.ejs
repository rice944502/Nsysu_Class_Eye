<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel="stylesheet" href="/stylesheets/custom.min.css" />
    <script src="./javascripts/navbar.js"></script>
  </head>
  <body>
  	<div class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
	    <div class="container">
	      <a class="navbar-brand" href="/"><%= title %></a>
	      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
	        <span class="navbar-toggler-icon"></span>
	      </button>
	      <div class="collapse navbar-collapse" id="navbarResponsive">
	        <ul class="navbar-nav mr-auto">
	          <li class="nav-item">
	            <a class="nav-link" href="/">Home</a>
	          </li>
	          <li class="nav-item">
	            <a class="nav-link" href="share">Share</a>
	          </li>
	          <li class="nav-item">
	            <a class="nav-link" href="search">Search</a>
	          </li>
	          <li class="nav-item active">
	            <a class="nav-link" href="question">Question</a>
	          </li>
	        </ul>
	        <form class="form-inline my-2 my-lg-0">
	          <a href="/login" class="btn btn-secondary my-2 my-sm-0">Login</a>
	        </form>
	      </div>
			</div>
		</div>
		<div class="container">
			<div class="container col-md-6 col-md-offset-3">
				<% for(var i=0; i<10; i++) { %>
					<div class="card row-margin-top">
						<div class="card-body">
							<h5 class="card-title">問題標題</h5>
							<p class="card-text"><% for(var j=0; j<30; j++) { %>ㄦ<% } %>...</p>
							<img src="./images/like.png" />
							<img src="./images/dislike.png" />
							<a href="#" class="btn btn-primary btn-sm pull-right">點我看更多</a>
						</div>
					</div>
				<% } %>
			</div>
		</div>
  </body>
</html>
